generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URI")
}

model User {
  id                String             @id @default(uuid())
  userName          String
  email             String             @unique
  passwordHash      String
  createdAt         String
  firstName         String?
  lastName          String?
  birthday          DateTime?          @db.Date
  city              String?
  aboutMe           String?
  isConfirmed       Boolean            @default(false)
  Device            Device[]
  EmailConfirmation EmailConfirmation?
  PasswordRecovery  PasswordRecovery?
  Photos            Photos[]
}

model EmailConfirmation {
  userId           String @id
  confirmationCode String
  user             User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PasswordRecovery {
  userId               String @id
  passwordRecoveryCode String
  user                 User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Device {
  deviceId  String @id
  ipAddress String
  title     String
  createdAt String
  userId    String
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Photos {
  id        String @id @default(uuid())
  userId    String
  photoType String
  photoLink String
  user      User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}
