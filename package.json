{
  "name": "inctagram-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:app": "concurrently \"nest start file-storage --watch\" \"nest start main-app --watch\"",
    "start:dev": "concurrently \"nest start file-storage --watch\" \"nest start main-app --watch\" \"yarn prisma format --schema=prisma/schema.prisma\"",
    "start:debug": "concurrently \"nest start file-storage --watch --debug\" \"nest start main-app --watch --debug\"",
    "start:prod": "concurrently \"node dist/apps/file-storage/src/main\" \"node dist/apps/main-app/src/main\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config test/jest-e2e.json",
    "prisma:format": "yarn prisma format --schema=libs/providers/prisma/schema.prisma",
    "prisma:gen": "yarn prisma generate --schema=libs/providers/prisma/schema.prisma",
    "prisma:push": "yarn prisma db push --schema=libs/providers/prisma/schema.prisma",
    "prisma:migrate": "yarn prisma migrate dev --name init --schema=libs/providers/prisma/schema.prisma",
    "migrate:reset": "yarn prisma reset --schema=libs/providers/prisma/schema.prisma",
    "prisma:studio": "yarn prisma studio --schema=libs/providers/prisma/schema.prisma"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.363.0",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/cqrs": "^10.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/microservices": "^10.0.2",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^7.0.3",
    "@prisma/client": "^4.16.2",
    "@types/multer": "^1.4.7",
    "amqp-connection-manager": "^4.1.13",
    "amqplib": "^0.10.3",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.30.0",
    "nodemailer": "^6.9.3",
    "prisma": "^4.16.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "sharp": "^0.32.1",
    "webpack": "^5.88.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@flydotio/dockerfile": "^0.2.16",
    "@nestjs/cli": "^10.0.5",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.0",
    "@types/node": "18.15.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.5.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}
